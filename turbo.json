{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".nuxt/**", ".output/**", "storybook-static/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "prisma:generate": {
      "cache": false,
      "outputs": ["**/node_modules/.prisma/**", "**/node_modules/@prisma/client/**"]
    },
    "prisma:migrate": {
      "cache": false
    },
    "prisma:seed": {
      "cache": false,
      "dependsOn": ["prisma:generate"]
    },
    "clean": {
      "cache": false
    }
  }
}

