{
  "name": "task-manager-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rdf node_modules .turbo .store",
    "prisma:generate": "pnpm --filter @task-manager/prisma generate",
    "prisma:migrate": "pnpm --filter @task-manager/prisma migrate",
    "prisma:seed": "pnpm --filter @task-manager/api prisma:seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

